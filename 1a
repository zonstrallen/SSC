%{
#include<stdio.h>
#include<stdlib.h>
int v=0,op=0,id=0,flag=0;
%}
%%
[0-9]+ {id++; printf("\n identifier"); ECHO;}
[\+ \*]+ { op++; printf("\n operator"); ECHO;}
"(" {v++;}
")" {v--;}
";" {flag=0;}
.|\n ;
%%
int main()
{
	printf("enter the arthematic expression:\n");
	yylex();
	if((op+1)==id && v==0)
	printf("/n valid expression\n");
	else
	printf("/n ivalid expression\n");
	printf("number of identifier:%d\n",id);
	printf("number of operator:%d\n",op);
}
